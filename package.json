{
  "name": "sanity-hermes",
  "version": "0.1.0",
  "private": true,
  "description": "A reusable Sanity plugin that connects Notion tables with LLM to generate article drafts",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "dev:all": "npm run build:packages && concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:studio\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:studio": "cd apps/studio/plugin-project && npm run dev",
    "dev:packages": "concurrently \"npm run dev --workspace=packages/shared\" \"npm run dev --workspace=packages/sanity-notion-llm-plugin\"",
    "dev:plugin": "npm run dev:packages",
    "watch:all": "concurrently \"npm run dev:packages\" \"npm run dev:backend\" \"npm run dev:studio\"",
    "build:all": "npm run build --workspaces",
    "build:packages": "npm run build --workspace=packages/shared --workspace=packages/sanity-notion-llm-plugin",
    "build:backend": "npm run build:packages && npm run build --workspace=apps/backend",
    "start:all": "npm run dev:all"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
