{
  "crons": [
    {
      "path": "/api/cron/generate-content",
      "schedule": "0 9 * * *"
    }
  ],
  "buildCommand": "npm run build:backend",
  "outputDirectory": "apps/backend/.next",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- apps/backend packages/"
}
